<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/df_dialog_layout"
    android:id="@+id/dialogParent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/whiteCardColor"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/calibration"
                android:layout_gravity="center"/>

            <TextView
                style="@style/homeHeading"
                android:layout_gravity="center"
                android:text="Calibration"
                android:textColor="@color/blackTextColor"

                android:textSize="@dimen/headerTextSize" />
            <TextView
                android:id="@+id/calibration_guide"
                style="@style/learnhubTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Place your phone still to see the road clearly"
                android:textSize="14dp"
                android:textStyle="normal"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/calibration_text"
                style="@style/learnhubTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tilt your phone"
                android:textSize="14dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/calibration_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Close"
                android:layout_marginTop="15dp"
                android:textColor="@color/whiteTextColor"
                android:background="@drawable/onboarding_button"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>